@model MovieEntity.Models.Booking

@{
    ViewData["Title"] = "EditBooking";
}

@*<h1>EditBooking</h1>*@

<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">Booking Entry</a>Booking
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2>
    <div class="form-group">
        <label> MovieId </label>
        <input type="text" asp-for="MovieId" class="form-control" placeholder="enter MovieId" required />
    </div>
    <div class="form-group">
        <label> MovieName </label>
        <input type="text" asp-for="MovieName" class="form-control" placeholder="enter MovieName" required />
    </div>
    <div class="form-group">
        <label> TheatreName </label>
        <input type="text" asp-for="TheatreName" class="form-control" placeholder="enter TheatreName" required />
    </div>
    <div class="form-group">
        <label> seatNo </label>
        <input type="text" asp-for="seatNo" class="form-control" placeholder="enter seatNo" required />
    </div>
    <div class="form-group">
        <label> Theatre Address </label>
        <input type="text" asp-for=" Address" class="form-control" placeholder="enter theatre Address" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>