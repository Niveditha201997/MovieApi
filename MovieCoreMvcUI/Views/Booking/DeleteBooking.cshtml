@model MovieEntity.Models.Booking

@{
    ViewData["Title"] = "DeleteBooking";
}

@*<h1>DeleteBooking</h1>*@

<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">Booking Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2>
    <div class="form-group">
        <label> Booking Id </label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter Booking Id" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
