@model MovieEntity.Models.Location

@{
    ViewData["Title"] = "EditLocation";
}

@*<h1>EditLocation</h1>*@

<div>
    <hr />
    <a asp-controller="Location" asp-action="Index">Location Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Location Entry</h2>
    <div class="form-group">
        <label> TheatreId </label>
        <input type="text" asp-for="TheatreId" class="form-control" placeholder="enter theatreId" required />
    </div>
    <div class="form-group">
        <label> Theatre Address  </label>
        <input type="text" asp-for="Address" class="form-control" placeholder="enter theatre Address" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
