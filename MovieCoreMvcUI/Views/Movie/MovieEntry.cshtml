@model MovieEntity.Models.Movie
@{
    ViewData["Title"] = "MovieEntry";
}

@*<h1>MovieEntry</h1>*@

<div>
    <hr />
    <a asp-controller="Movie" asp-action="Index">Movie Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2>
    <div class="form-group">
        <label> Movie Name </label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter movie name" required />
    </div>
    <div class="form-group">
        <label> Movie Description </label>
        <input type="text" asp-for="MovieDesc" class="form-control" placeholder="enter movie name" required />
    </div>
    <div class="form-group">
        <label> Movie Type </label>
        @*<input type="text" asp-for="MovieType" class="form-control" placeholder="enter movie name" required />*@
        <select asp-for="MovieType" asp-items="@ViewBag.movieType"></select>
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if(ViewBag.status =="Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

