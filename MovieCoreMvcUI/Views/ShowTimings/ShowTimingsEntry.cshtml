@model MovieEntity.Models.ShowTimings

@{
    ViewData["Title"] = "ShowTimingsEntry";
}

@*<h1>ShowTimingsEntry</h1>*@

<div>
    <hr />
    <a asp-controller="ShowTimings" asp-action="Index">ShowTimings Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>ShowTimings Entry</h2>
    <div class="form-group">
        <label> ShowTimings MovieId </label>
        <input type="text" asp-for="MovieId" class="form-control" placeholder="enter MovieId" required />
    </div>
    <div class="form-group">
        <label> ShowTimings TheatreId </label>
        <input type="text" asp-for="TheatreId" class="form-control" placeholder="enter TheatreId" required />
    </div>
    <div class="form-group">
        <label> ShowTimings ShowTime </label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control" placeholder="enter ShowTime" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


