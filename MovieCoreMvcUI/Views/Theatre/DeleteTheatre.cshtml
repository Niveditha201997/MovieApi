@model MovieEntity.Models.Theatre


@{
    ViewData["Title"] = "DeleteTheatre";
}

@*<h1>DeleteTheatre</h1>*@

<div>
    <hr />
    <a asp-controller="Theatre" asp-action="Index">Theatre Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Theatre Entry</h2>
    <div class="form-group">
        <label> Theatre Id </label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter theatre Id" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


